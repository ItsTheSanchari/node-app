<%- include('includes/head.ejs')%>
    </head>

    <body>
        <%-include('includes/navigation.ejs')%>
        <main>
            <% if (orders?.items.length == 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                        <li>
                            <h1>ORDER ID -# <%= orders._id %></h1>
                            <ul>
                                <% orders.items.forEach(product => { %>
                                    <li><%= product.title %> (<%= product.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                </ul>
            <% } %>
        </main>
        <%-include('includes/end.ejs')%>