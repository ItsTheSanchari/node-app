<%- include('includes/head.ejs')%>
<link rel="stylesheet" href="/css/order.css">
    </head>

    <body>
        <%-include('includes/navigation.ejs')%>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1>ORDER ID -# <a href="/admin/order/<%= order._id %>"><%= order._id %></a></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(eachproduct => { %>
                                    <li class="orders__products-item"><%= eachproduct.product.title %> (<%= eachproduct.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%-include('includes/end.ejs')%>