<%- include('includes/head.ejs')%>
<link rel="stylesheet" href="/css/cart.css">
</head>
<body>
   <%-include('includes/navigation.ejs')%>
   <main>
    <% if (products.length > 0) { %>
        <ul class="cart__item-list">
            <% products.forEach(p => { %>
                <li class="cart__item">
                     <div class="card__image">
                    <img  style="width: 30%;"src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
                </div>
                    <h1><%= p.title %></h1><br>
                    <h2>Quantity: <%= p.cartItem.quantity %></h2>
                    <form action="/admin/cart-delete-item" method="POST">
                        <input type="hidden" value="<%= p.id %>" name="productId">
                        <input type="hidden" value="<%= p.cartItem.cartId %>" name="cartId">
                        <button class="btn danger" type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h1>No Products in Cart!</h1>
    <% } %>
</main>
<%-include('includes/end.ejs')%>