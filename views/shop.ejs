<%- include('includes/head.ejs')%>
</head>
<body>
   <%-include('includes/navigation.ejs')%>

    <main>
        <% if(products.length > 0) {%>
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <div class="grid">
            <%for(let [index,prod] of products.entries()){%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=prod.title%></h1>
                </header>
                <div class="card__image">
                    <img  style="width: 30%;"src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%=prod.price%></h2>
                    <p  style="margin: -8px;"class="product__description"><%=prod.description%></p>
                </div>
                <div class="card__actions">
                    <a href="admin/product-details/<%=prod.id%>">Details</a>
                    <!-- <form action="/admin/delete-product" method="post">
                        <input type="hidden" name="index" id='<%=index%>' value='<%=index%>'>
                        <button type="submit" class="btn">Delete</button>    
                    </form> -->
                    <!-- <button class="btn">Delete</button> -->

                </div>
            </article>
            <%}%>
        </div>
        <% } else { %>
            <h1>No Products Found</h1>
        <%}%>
    </main>
<%-include('includes/end.ejs')%>